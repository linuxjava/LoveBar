<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BGASwipeItemLayout的属性-->
    <declare-styleable name="BGASwipeItemLayout">
        <attr name="bga_sil_swipeDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="bga_sil_bottomMode" format="enum">
            <enum name="pullOut" value="0" />
            <enum name="layDown" value="1" />
        </attr>
        <attr name="bga_sil_springDistance" format="dimension" />
        <attr name="bga_sil_swipeAble" format="boolean" />
    </declare-styleable>

    <!--SegmentControl的属性-->
    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <!--缺省文字颜色-->
        <attr name="defaultTextColor" format="color|reference" />
        <!--选中文字颜色-->
        <attr name="checkTextColor" format="color|reference" />
        <!--线条颜色-->
        <attr name="strokeColor" format="color|reference" />
        <!--填充颜色-->
        <attr name="fillColor" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="direction" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
    </declare-styleable>
</resources>