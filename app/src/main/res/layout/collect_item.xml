<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_width_wrap_height"
    android:background="@drawable/history_item_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/avatar"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_avatar" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/like_chat_ll"
        android:layout_toRightOf="@id/avatar_container"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.0dp">

            <TextView
                android:id="@+id/name"
                style="@style/wrap_width_wrap_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7.0dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="asdfasdf"
                android:textColor="#000"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dp">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="22.0dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="12341sdlfkfasdf4"
                android:textColor="#888888"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/like_chat_ll"
        android:layout_width="wrap_content"
        android:layout_height="70.0dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10.0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/collect_img"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/collect_like"
            android:layout_marginRight="10.0dp"/>

        <ImageView
            android:id="@+id/chat_img"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/collect_chat" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/avatar_container"
        android:background="#CCDDDDDD" />
</RelativeLayout>