<?xml version="1.0" encoding="utf-8"?>
<xiao.love.bar.component.widget.BGASwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_root"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:bga_sil_bottomMode="pullOut"
    app:bga_sil_springDistance="45dp"
    app:bga_sil_swipeDirection="left">

    <LinearLayout
        style="@style/wrap_width_match_height"
        android:background="@drawable/swip_item_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_swipe_delete"
            style="@style/wrap_width_wrap_height"
            android:clickable="true"
            android:paddingLeft="20.0dp"
            android:paddingRight="20.0dp"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_item_layout"
        style="@style/match_width_match_height"
        android:background="@drawable/history_item_selector"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/avatar_container"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_avatar" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/avatar_container"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/wrap_width_wrap_height"
                android:layout_marginBottom="3.0dp">

                <TextView
                    android:id="@+id/name"
                    style="@style/wrap_width_wrap_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7.0dp"
                    android:layout_toLeftOf="@+id/time"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="asdfasdf"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/time"
                    style="@style/wrap_width_wrap_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:text="12:00"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/wrap_width_wrap_height"
                android:layout_marginTop="3.0dp">

                <ImageView
                    android:id="@+id/msg_state"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/msg_state_fail_resend"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22.0dp"
                    android:layout_toLeftOf="@+id/unread_msg_number"
                    android:layout_toRightOf="@+id/msg_state"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="12341sdlfkfasdf4"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/unread_msg_number"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/unread_count_bg"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/divider" />

    </RelativeLayout>

</xiao.love.bar.component.widget.BGASwipeItemLayout>