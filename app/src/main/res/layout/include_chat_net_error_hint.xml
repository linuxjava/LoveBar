<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/c_error_item"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_net_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:src="@drawable/ic_love_net_error_icon" />

    <TextView
        android:id="@+id/text_net_error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/img_net_error"
        android:text="不能连接到服务器"
        android:textColor="#000" />

