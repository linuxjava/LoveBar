<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_width_match_height"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55.0dp"
        android:background="@color/holo_blue_dark"
        android:orientation="horizontal"
        android:paddingBottom="12.0dp"
        android:paddingTop="12.0dp">

        <LinearLayout
            style="@style/match_width_match_height"
            android:layout_width="150.0dp"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/tab_left_img"
                style="@style/tab_img"
                android:background="@drawable/ic_button_left" />

            <ImageView
                android:id="@+id/tab_right_img"
                style="@style/tab_img"
                android:background="@drawable/ic_button_right" />

        </LinearLayout>

        <LinearLayout
            style="@style/match_width_match_height"
            android:layout_width="150.0dp"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tab_left_tv"
                style="@style/tab_tv"
                android:text="收藏" />

            <TextView
                android:id="@+id/tab_right_tv"
                style="@style/tab_tv"
                android:text="被收藏" />
        </LinearLayout>
    </RelativeLayout>

    <!--BGARefreshLayout中RecyclerView一定要设置为
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"-->
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/recyclerview_refresh"
        style="@style/match_width_match_height"
        android:background="@color/recyclerView_bg">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/recyclerView_bg"
            android:scrollbars="vertical" />
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
</LinearLayout>