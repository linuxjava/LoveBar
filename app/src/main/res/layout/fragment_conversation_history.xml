<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_width_match_height"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/message_title"
            style="@style/wrap_width_wrap_height"
            android:layout_centerInParent="true"
            android:text="@string/session"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <include
        android:id="@+id/error_item_rl"
        layout="@layout/chat_neterror_item"
        android:visibility="gone" />

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/recyclerview_refresh"
        style="@style/match_width_wrap_height"
        android:background="@color/recyclerView_bg">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/recyclerView_bg"
            android:scrollbars="vertical" />
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

</LinearLayout>